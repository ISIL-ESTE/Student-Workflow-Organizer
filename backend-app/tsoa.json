{
    "entryFile": "./server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["./controllers/**/*.ts"],
    "spec": {
        "outputDirectory": "./docs/api_docs/",
        "specVersion": 2,
        "specValidation": false,
        "securityDefinitions": {
            "jwt": {
                "type": "apiKey",
                "name": "x-auth-token",
                "in": "header"
            },
            "apiKey": {
                "type": "apiKey",
                "name": "x-api-key",
                "in": "header"
            }
        }
    },
    "routes": {
        "routesDir": "routes",
        "authenticationModule": "./middlewares/authentications.ts"
    }
}
