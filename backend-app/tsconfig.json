{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@utils/*": ["utils/*"],
            "@models/*": ["models/*"],
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@routes/*": ["routes/*"],
            "@constants/*": ["constants/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.js" /* Include JavaScript files */,
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ] /* Exclude 'node_modules' directory and test files */
}
